<h1>Products!</h1>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <%= image_tag product.image_url, class: 'img-responsive' %>
      <%= link_to product.name, product_path(product) %>
      <%= number_to_currency product.price %>
    </div>
  <% end %>
</div>
