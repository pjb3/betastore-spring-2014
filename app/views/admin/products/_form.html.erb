<% if @product.errors.present? %>
  <p>
    <h2>There was an error</h2>
    <% for error in @product.errors.full_messages %>
      <%= error %>
    <% end %>
  </p>
<% end %>

<%= form_for [:admin, @product], html: { class: "form-horizontal", role: "form" } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image_url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.url_field :image_url, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
